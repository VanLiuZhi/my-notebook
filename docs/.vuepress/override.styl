$accentColor = #20a0ff

width-mobile = 768px
mobile = "only screen and (max-width: " + width-mobile + ")"

blockquote
  font-size: 1rem !important

#app
  .custom-block.tip 
    background-color: #f3f5f7;
    border-color: #409eff;
  p
    code
      color: #813eaf;
  ul
    li
      code
        color: #813eaf;
  
  .home
    box-sizing border-box
    width 100%
    height calc(100vh - 3.6rem)
    display flex;
    flex-direction column
    justify-content center
    .hero
      h1
        margin 1rem auto
        font-size 2.1rem
      img
        margin 0 auto
        width 17.5rem
        height 10.5rem
      .description
        font-size 1.2rem
        margin 0 auto